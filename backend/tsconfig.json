{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": {
			"~/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./build",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}